<!DOCTYPE html>
<%- include("./partials/head.ejs") %>
<html>
  <body>
    <%- include("./partials/header.ejs") %>
    <main>
    <span><a href="/catalog">Catalog</a> <h3>/</h3><a href="/category/<%= item.category.id %>"><%= item.category.name %></a> <h3>/</h3> <a href="/catalog/<%= item._id %>"><%= item.name %></a></h3></span>      
          <div class="container item-big">
            <form action="/catalog/<%= item.id %>/update" method="POST" class="container item-big">              
                <select class="form-category" name="category" id="">
                  <% categories.map((cat) => {  %>     
                    <% if(cat.id == item.category.id) { %>
                      <option selected value="<%= cat.name %>-<%= cat.id %>-<%= item.id %>"><%= cat.name %></option>  
                    <% } else {%>  
                      <option  value="<%= cat.name %>-<%= cat.id %>-<%= item.id %>"><%= cat.name %></option>     
                    <% }%>              
                  <% }) %>
                </select>
                <input placeholder="Enter item's name"  class="form-name" name="name" value="<%= item.name%>" type="text">
                <!-- Hardcoded options, must be replaced -->             
              <textarea placeholder="Enter item's description" name="description" id="" cols="30" rows="5"><%= item.description%></textarea>
              <!-- /// -->
             <div class="price price-update">
               <input min="0"  step="0.01" name="price" placeholder="price"  value="<%= item.price%>" type="number">
               <input min="0" name="stock" placeholder="stock"  value="<%= item.stock%>" type="number">
             </div>
             <div class="btns">
               <button>Submit</button>
               <a href="/catalog/<%= item.id%>">Cancel</a>
             </div>
            </div>
            </form>      
    </main>    
  </body>
</html>