<!DOCTYPE html>
<%- include("./partials/head.ejs") %>
<html>
  <body>
    <%- include("./partials/header.ejs") %>
    <main>
      <div class="container">
        <ul  class="items">
          <% items.map((item) => {  %>
            <a href="/catalog/<%= item._id%>">
              <li class="item">
                <div>
                  <h3><%= item.category.name %></h3>
                  <h1><%= item.name%></h1>
                </div>
                <p><%= item.description%></p>
                <div>
                  <h2>$<%= item.price  %>, </h2>
                  <% if(item.stock > 0) {%>
                    <h3><%= item.stock %> left</h3>
                  <%} else {%>
                    <h3>Out of stock</h3>
                    <% }%>
                </div>
              </li>
            </a>           
            <% }) %>
          </ul>
      </div>  
    </main>
    
  </body>
</html>
