<!DOCTYPE html>
<%- include("./partials/head.ejs") %>
<html>
  <body>
    <%- include("./partials/header.ejs") %>
    <main>
      <span><a href="/catalog">Catalog</a><h3>/</h3><a href="/category">Categories</a><h3>/</h3><h3> <%= item.name%></h3></span>
      <div class="container category">
        <div class="header">
            <div>
                <h1><%= item.name %></h1>
                <div class="btns btns-desktop">
                    <a href="/category/<%= item._id%>/update">Update info</a>
                    <a href="/category/<%= item.id%>/delete">delete</a>
                </div>
            </div>
            <p><%= item.description %></p>
            <div class="btns btns-mobile">
                <a href="/category/<%= item._id%>/update">Update info</a>
                <a href="/category/<%= item.id%>/delete">delete</a>
            </div>
        </div>

        <div class="container">
            <ul  class="items">
                <% items.map((item) => {  %>
                  <a href="/catalog/<%= item._id%>">
                    <li class="item">
                      <div>                        
                        <h1><%= item.name%></h1>
                      </div>
                      <p><%= item.description%></p>
                      <div>
                        <h2>$<%= item.price  %>, </h2>
                        <% if(item.stock > 0) {%>
                          <h3><%= item.stock %> left</h3>
                        <%} else {%>
                          <h3>Out of stock</h3>
                          <% }%>
                      </div>
                    </li>
                  </a>           
                  <% }) %>
                </ul>
        </div>
      </div>  
    </main>
    
  </body>
</html>
